//出品するボタン
.scroll_button
  - if user_signed_in?
    = link_to image_tag("/images/material/icon/icon_camera.png", class: "scroll_button"), products_new_path
  - else 
    = link_to image_tag("/images/material/icon/icon_camera2.png", class: "scroll_button")

//ヘッダー
.header 
  .header__box
    - if user_signed_in?
      = render 'header/header_login'
    - else 
      = render 'header/header_logout'


#category-area
  %i{class: "fas fa-list"}
  カテゴリーから探す
