/新規登録画面
.signup-container
  .signup-header
    = render partial: 'shared/signup_header'


  .signup-main
    .step1-main__menu
      新規会員登録
      %br/
      .signup-list
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.label :メールアドレス
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "furima@furima.com", class: 'signup_text_field'

          .field
            = f.label :ニックネーム
            %br/
            = f.email_field :nickname, autocomplete: "nickname", placeholder: "フリマさん", class: 'signup_text_field'
            
          .field
            = f.label :パスワード
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "abc1234", class: 'signup_text_field'
          .field
            = f.label :"パスワード(確認用)"
            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認のためもう一度入力してください", class: 'signup_text_field'
          .field
            = f.label :名前
            %br/
            = f.text_field :first_name, autocomplete: "first_name", placeholder: "太郎", class: 'signup_text_field'
          .field
            = f.label :苗字
            %br/
            = f.text_field :last_name, autocomplete: "last_name", placeholder: "山田", class: 'signup_text_field'
          .actions
            = f.submit "Sign up"

  .signup-footer
    = render partial: 'shared/signup_footer'
