/新規登録画面
.signup-container
  .signup-header
    = render partial: 'users/shared/signup_header'


  .signup-main
    .signup-main__menu
      .signup-main__menu_text
        会員情報入力
      .signup-main__menu_info
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .field
            = f.label :メールアドレス, class:"label_nickname"
            %span.must 必須

            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC,携帯どちらでも可", class: 'signup_text_field'

          .field
            = f.label :ニックネーム
            %span.must 必須
            %br/
            = f.email_field :nickname, autocomplete: "nickname", placeholder: "例）フリマさん", class: 'signup_text_field'
          .field
            = f.label :パスワード（英数字7文字以上）
            - if @minimum_password_length
              %em
              %span.must 必須
            %br/
            = f.password_field :password, autocomplete: "new-password", placeholder: "例）abc1234", class: 'signup_text_field'
          .field
            = f.label :"パスワード(確認用)"
            %span.must 必須

            %br/
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "確認のためもう一度入力してください", class: 'signup_text_field'
          .field_group
            .field_group_left
              = f.label :名前
              %span.must 必須
              %br/
              = f.text_field :first_name, autocomplete: "first_name", placeholder: "例）太郎", class: 'signup_text_field_split'
            .field_group_right
              = f.label :苗字
              %span.must 必須
              %br/
              = f.text_field :last_name, autocomplete: "last_name", placeholder: "例）山田", class: 'signup_text_field_split'
          .field_group
            .field_group_left
              = f.label :名前カナ
              %span.must 必須
              %br/
              = f.text_field :first_kana, autocomplete: "first_kana", placeholder: "例）タロウ", class: 'signup_text_field_split'
            .field_group_right
              = f.label :苗字カナ
              %span.must 必須
              %br/
              = f.text_field :last_kana, autocomplete: "last_kana", placeholder: "例）ヤマダ", class: 'signup_text_field_split'
          .field
            = f.label :電話番号
            %span.must 必須
            %br/
            = f.text_field :phonenumber, autocomplete: "phonenumber", placeholder: "例）123-4567-7890", class: 'signup_text_field'
          .actions_signup
            = f.submit "登録", class: 'signupbtn'
  .signup-footer
    = render partial: 'users/shared/signup_footer'
